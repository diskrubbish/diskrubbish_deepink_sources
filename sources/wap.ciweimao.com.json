{
    "name": "刺猬猫(WAP)",
    "url": "wap.ciweimao.com",
    "version": 102,
    "search": {
        "url": "https://wap.ciweimao.com/book_list@post->keyword=${key}",
        "charset": "utf-8",
        "list": "ul[class=book-list]>li > a",
        "name": "div > h3",
        "author": "div > p[class=author]",
        "summary": "div > p[class=desc]",
        "cover": "img@attr->data-original",
        "detail": "a@attr->href@replace->wap->www"
    },
    "detail": {
        "name": "meta[property=og:novel:book_name]@attr->content",
        "author": "meta[property=og:novel:author]@attr->content",
        "cover": "meta[property=og:image]@attr->content",
        "summary": "meta[property=og:description]@attr->content",
        "status": "p.update-state",
        "update": "div.book-info > a > p",
        "lastChapter": "div.book-info > a > p",
        "catalog": "a[class=btn-more ly-fr]@attr->href"
    },
    "catalog": {
        "list": ".book-chapter-box",
        "booklet": {
            "name": "h4",
            "list": "ul>li"
        },
        "name": "a",
        "chapter": "a@attr->href@replace->www.->mip."
    },
    "chapter": {
        "content": "p[class=chapter]",
        "filter": ["@span","@a"]
    },
    "auth": {
        "login": "https://wap.ciweimao.com/signup/login?redirect=https%3A%2F%2Fwap.ciweimao.com%2Freader%2Fmy_info",
        "cookie": "wap.ciweimao.com",
        "verify": "https://wap.ciweimao.com/reader/my_info",
        "logged": "div.container.per-homepage > a->退出登录",
        "vip": "#J_DingYueBox > h1@equal->本章是VIP章节，购买后才能阅读"
    }
}