{
    "name": "动漫之家",
    "url": "v3api.dmzj.com",
    "version": 101,
    "search": {
        "url": "https://v3api.dmzj.com/search/show/1/${key}/0.json",
        "charset": "utf-8",
        "list": "$.*",
        "name": "$.title",
        "author": "$.authors",
        "cover": "$.cover",
        "detail": "/novel/${$.id}.json"
    },
    "detail": {
        "name": "$.name",
        "author": "$.authors",
        "cover": "$.cover",
        "summary": "$.introduction",
        "lastChapter": "$.last_update_chapter_name",
        "status": "$.status",
        "catalog": "/novel/chapter/${$.id}.json"
        
    },
    "catalog": {
        "list": "$.*",
        "booklet": {
            "name": "$.volume_name",
            "list": ""
        },
        "name": "$.chapters.*.chapter_name",
        "chapter": "http://v3api.dmzj.com/novel/download/999999_${$.volume_id}_${$.chapters.*.chapter_id}.txt"
    },
    "chapter": {
        "content": "${html}"
    }
}