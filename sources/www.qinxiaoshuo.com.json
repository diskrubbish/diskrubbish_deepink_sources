{
    "name": "亲小说",
    "url": "www.qinxiaoshuo.com",
    "version": 103,
    "search": {
        "url": "https://www.qinxiaoshuo.com/search/?keyword=${key}",
        "charset": "utf-8",
        "list": "div[class=book]",
        "name": "div[ class=book_info]>div[class=items]>h3",
        "author": "div[class=book_info]>div[class=items]>div:eq(1)@replace->作者: ->",
        "summary": "div[ class=book_info]>div[class=intro right]",
        "cover": "a>img@attr->src",
        "detail": "a@attr->href"
    },
    "detail": {
        "name": "div.show_info > div > h1",
        "author": "div.show_info > div > div[class=info_item]>div>a",
        "cover": "div.show_info > img@attr->src",
        "summary": "div.show_info > div > textarea",
        "status": "#status",
        "update": "div.show_info > div > div:nth-child(4) > div:nth-child(1)",
        "lastChapter": "div.show_info > div > div:nth-child(4) > div:nth-child(2)@replace->最新章节：->",
        "catalog": ""
    },
    "catalog": {
        "list": ".volume",
        "orderBy": 0,
        "booklet": {
            "name": ".volume_title>span",
            "list": ".chapters"
        },
        "name": "div>a",
        "chapter": "div>a"
    },
    "chapter": {
        "content": "#chapter_content",
        "page": "a[class=qxs_btn]:eq(2)@match->下一页"
    },
    "auth": {
        "login": "https://www.qinxiaoshuo.com/login/",
        "cookie": "www.qinxiaoshuo.com",
        "verify": "https://www.qinxiaoshuo.com/login/",
        "logged": "#menu_user > a:contains(阅读记录)@equal->阅读记录"
    }
}